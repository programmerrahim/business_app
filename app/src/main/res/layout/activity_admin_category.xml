<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add new Product"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    //1st category start

    <LinearLayout
        android:id="@+id/linear1_category_layoutId"
        android:orientation="horizontal"
        android:background="#756723"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/lp_gas_1"
            android:padding="5dp"
            android:src="@drawable/lp_gas"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/lp_gas_2"
            android:padding="5dp"
            android:src="@drawable/clothe"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/lp_gas_3"
            android:padding="5dp"
            android:src="@drawable/camera"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/lp_gas_4"
            android:padding="5dp"
            android:src="@drawable/watch"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    //1st category ends

    //2nd category start

    <LinearLayout
        android:id="@+id/linear2_category_layoutId"
        android:orientation="horizontal"
        android:background="#1F85C3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/linear1_category_layoutId"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/lp_gas_5"
            android:padding="5dp"
            android:src="@drawable/toys"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:id="@+id/lp_gas_6"
            android:padding="5dp"
            android:src="@drawable/book"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:id="@+id/lp_gas_7"
            android:padding="5dp"
            android:src="@drawable/food"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:id="@+id/lp_gas_8"
            android:padding="5dp"
            android:src="@drawable/electronics"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>
    //2nd category ends

    //3rd category start

    <LinearLayout
        android:id="@+id/linear3_category_layoutId"
        android:orientation="horizontal"
        android:background="#C71C1C"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/linear2_category_layoutId"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:padding="5dp"
            android:id="@+id/lp_gas_9"
            android:src="@drawable/mobile"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/lp_gas_10"
            android:padding="5dp"
            android:src="@drawable/gift"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/lp_gas_11"
            android:padding="5dp"
            android:src="@drawable/clothe"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/lp_gas_12"
            android:padding="5dp"
            android:src="@drawable/shoe"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    //3rd category ends


    <Button
        android:id="@+id/check_orders_btn"
        android:layout_above="@id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:text="Check New Orders"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:background="@drawable/edit_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:text="LogOut"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/edit_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>